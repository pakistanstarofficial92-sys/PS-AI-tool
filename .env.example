# Copy this file to .env and fill values (do NOT commit real secrets to git)

PORT=5000
NODE_ENV=development

# PostgreSQL (example)
DATABASE_URL="postgresql://postgres:yourpassword@localhost:5432/ps_ai_tool?schema=public"

# JWT secrets
JWT_ACCESS_SECRET="change_this_to_a_very_strong_secret"
JWT_REFRESH_SECRET="change_this_refresh_secret"

# Prisma (optional, uses DATABASE_URL)
PRISMA_DATABASE_URL=${DATABASE_URL}

# Redis (if used)
REDIS_URL="redis://localhost:6379"

# QR encryption key (32 bytes base64 or hex)
QR_ENCRYPTION_KEY="change_this_to_a_32_byte_key"

# Binance placeholder (read-only - safe to keep placeholders)
BINANCE_API_KEY=""
BINANCE_SECRET=""